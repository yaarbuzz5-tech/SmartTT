# Production Environment Variables for Render

# Backend - Database (use Render PostgreSQL)
DB_HOST=your_postgres_host.render.com
DB_PORT=5432
DB_NAME=smarttt_production
DB_USER=smarttt_user
DB_PASSWORD=your_secure_password

# Backend - Server
PORT=5000
NODE_ENV=production

# Frontend URL on Render
FRONTEND_URL=https://your-frontend-name.onrender.com

# JWT Secret (generate a strong secret)
JWT_SECRET=generate_a_very_long_random_string_here

# For frontend .env.production
REACT_APP_API_URL=https://your-backend-name.onrender.com/api
REACT_APP_ENV=production
